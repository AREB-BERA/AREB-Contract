contract Arebmeme is ERC20 {
    IERC20 public Honey;
    IHenloDexRouterV1 public HenloDexRouter;
    IHoneyManager public HoneyManager;
    uint256 public lastUpdateDay;
    address public Areb_Honey_Market;
    address public owner;
    uint256 public accumulatedTax;
    uint256 public checkEpochTick;

    constructor(
        uint256 initialSupply,
        address _honey, //0x0e4aaf1351de4c0264c5c7056ef3777b41bd8e03
        address _HenloRouter, //0x482270069fF98a0dF528955B651494759b3B2F8C
        address _honeyManager
    ) ERC20("Arebmeme5", "AREB5") {
        _mint(msg.sender, initialSupply);
        Honey = IERC20(_honey);
        HenloDexRouter = IHenloDexRouterV1(_HenloRouter);
        HoneyManager = IHoneyManager(_honeyManager);
        lastUpdateDay =
            (block.timestamp - (block.timestamp % 1 days)) /
            (1 days);
        owner = _msgSender();
    }

    function definePair(address lpAddress) public {
        require(_msgSender() == owner);
        Areb_Honey_Market = lpAddress;
        owner = address(0);
    }

    modifier checkEpoch(address from) {
        _checkEpochAndBuyback(from);
        _;
    }

    function _update(
        address from,
        address to,
        uint256 value
    ) internal override checkEpoch(from) {
        uint256 valueToAddToReceiver = value;

        if (from == address(0)) {
            // Overflow check required: The rest of the code assumes that totalSupply never overflows
            // this is mint
            _totalSupply += value;
        } else {
            if (
                from == Areb_Honey_Market &&
                to != address(this) &&
                to != address(HoneyManager)
            ) {
                // this is buy
                uint256 fromBalance = _balances[from];
                if (fromBalance < value) {
                    revert ERC20InsufficientBalance(from, fromBalance, value);
                }
                _balances[from] = fromBalance - value;
                // 1% purchase tax
                uint256 purchaseTax = value / 100;
                accumulatedTax += purchaseTax;
                _balances[address(this)] += purchaseTax;
                valueToAddToReceiver = value - purchaseTax;
            } else {
                uint256 fromBalance = _balances[from];
                if (fromBalance < value) {
                    revert ERC20InsufficientBalance(from, fromBalance, value);
                }
                unchecked {
                    // Overflow not possible: value <= fromBalance <= totalSupply.
                    _balances[from] = fromBalance - value;
                }
            }
        }

        if (to == address(0)) {
            unchecked {
                // Overflow not possible: value <= totalSupply or value <= fromBalance <= totalSupply.
                // this is burn
                _totalSupply -= value;
            }
        } else {
            if (to == Areb_Honey_Market && from != address(this)) {
                //this is sell
                //5% tax charged when selling
                uint256 sellTax = (value * 5) / 100;
                valueToAddToReceiver = value - sellTax;
                _balances[address(this)] += sellTax;
                //sell all the accumulated areb to dex to get Honey
                accumulatedTax += sellTax;
                address[] memory path = new address[](2);
                path[0] = address(this);
                path[1] = address(Honey);
                _approve(
                    address(this),
                    address(HenloDexRouter),
                    accumulatedTax
                );
                HenloDexRouter.swapExactTokensForTokens(
                    accumulatedTax,
                    0,
                    path,
                    address(HoneyManager),
                    (block.timestamp + 600)
                );
                accumulatedTax = 0;

                // call the HoneyManeger, use the Honey got just now to add liquidity
                HoneyManager.addLiquidityAndStake();

                _balances[to] += valueToAddToReceiver;
            } else {
                unchecked {
                    // Overflow not possible: balance + value is at most totalSupply, which we know fits into a uint256.
                    _balances[to] += valueToAddToReceiver;
                }
            }
        }
        emit Transfer(from, to, value);
    }

    function _checkEpochAndBuyback(address from) internal {
        // check whether 1 day is passed
        uint256 currentDay = (block.timestamp - (block.timestamp % 1 days)) /
            (1 days);
        // if more than 1 day,claim the earned BGT, convert into Bera and buy Areb
        if (from != Areb_Honey_Market && currentDay > lastUpdateDay) {
            checkEpochTick++;
            lastUpdateDay = currentDay;
            HoneyManager.claimBgtAndBuyBack();
        } else {
            return;
        }
    }
}
